<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="RPn_Java-IDE">
    <property name="project.dir" value="../../src"/>
    <property name="ant.script" value="${project.dir}/build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-src">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <ant antfile="${ant.script}" inheritall="false">
            <target name="compile-java"/>
            <target name="compile-c++"/>
            <target name="compile-plugins"/>
        </ant>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath>
                <pathelement path="${project.dir}/../lib/iso-relax.jar:${project.dir}/../lib/jbossall-client.jar:${project.dir}/../lib/jlapack-0.6.jar:${project.dir}/../lib/log4j.jar:${project.dir}/../lib/msv.jar:${project.dir}/../lib/pdflib.jar:${project.dir}/../lib/relaxngDatatype.jar:${project.dir}/../lib/vecmath.jar:${project.dir}/../lib/xercesImpl.jar:${project.dir}/../lib/xml4j.jar:${project.dir}/../lib/xmlParserAPIs.jar:${project.dir}/../lib/xsdlib.jar"/>
            </classpath>
        </java>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" includes="${files}" source="1.5" srcdir="${project.dir}">
            <classpath path="${project.dir}/../lib/batik-awt-util.jar:${project.dir}/../lib/batik-dom.jar:${project.dir}/../lib/batik-ext.jar:${project.dir}/../lib/batik-svg-dom.jar:${project.dir}/../lib/batik-svggen.jar:${project.dir}/../lib/batik-util.jar:${project.dir}/../lib/batik-xml.jar:${project.dir}/../lib/iso-relax.jar:${project.dir}/../lib/jbossall-client.jar:${project.dir}/../lib/jlapack-0.6.jar:${project.dir}/../lib/log4j.jar:${project.dir}/../lib/msv.jar:${project.dir}/../lib/pdflib.jar:${project.dir}/../lib/relaxngDatatype.jar:${project.dir}/../lib/vecmath.jar:${project.dir}/../lib/xercesImpl.jar:${project.dir}/../lib/xml4j.jar:${project.dir}/../lib/xmlParserAPIs.jar:${project.dir}/../lib/xsdlib.jar"/>
        </javac>
    </target>
</project>
